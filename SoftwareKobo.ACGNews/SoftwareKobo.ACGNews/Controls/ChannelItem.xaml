        <Grid Visibility="Visible">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Offset="0"
                                  Color="#80000000"></GradientStop>
                    <GradientStop Offset="1"
                                  Color="#C0000000"></GradientStop>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="4" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Background="LightBlue"></Grid>
            <Grid Grid.Row="1"
                  SizeChanged="FrameworkElement_OnSizeChanged">
                <Polygon HorizontalAlignment="Left"
                         x:Name="Polygon"
                         Fill="LightBlue"></Polygon>
                <TextBlock Margin="8"
                           Text="{Binding}"
                           Foreground="White"></TextBlock>
                <SymbolIcon Symbol="Accept"
                            HorizontalAlignment="Right"></SymbolIcon>
            </Grid>
        </Grid>
        <Grid BorderThickness="1"
