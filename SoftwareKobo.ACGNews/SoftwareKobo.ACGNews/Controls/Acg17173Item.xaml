<UserControl x:Class="SoftwareKobo.ACGNews.Controls.Acg17173Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:model="using:SoftwareKobo.ACGNews.Models"
             xmlns:conv="using:SoftwareKobo.ACGNews.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=model:Acg17173Feed}">
    <UserControl.Resources>
        <conv:ImageCacheConverter x:Key="ImageCacheConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   TextWrapping="Wrap"
                   Foreground="Wheat" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="{Binding Summary}"
                       TextWrapping="Wrap"
                       TextTrimming="CharacterEllipsis"
                       MaxHeight="75"></TextBlock>
            <Image Grid.Column="1"
                   Source="{Binding Path=Thumbnail,Converter={StaticResource ImageCacheConverter}}"
                   Stretch="UniformToFill"
                   Width="110"
                   Height="75"
                   ImageFailed="Image_ImageFailed" />
        </Grid>
    </Grid>
</UserControl>