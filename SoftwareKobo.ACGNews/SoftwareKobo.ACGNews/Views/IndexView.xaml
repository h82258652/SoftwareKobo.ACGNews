<Page x:Class="SoftwareKobo.ACGNews.Views.IndexView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:control="using:SoftwareKobo.ACGNews.Controls"
      xmlns:vm="using:SoftwareKobo.ACGNews.ViewModels"
      mc:Ignorable="d">
    <Page.DataContext>
        <vm:IndexViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0"
                 x:Name="Header"
                 MinHeight="30"
                 MaxHeight="50"
                 HorizontalAlignment="Left">
            <ContentControl>
                <ContentControl.ContentTemplateSelector>
                    <control:HeaderTemplateSelector />
                </ContentControl.ContentTemplateSelector>
            </ContentControl>
            <!--<TextBlock Foreground="#B5B5B5"
                       FontFamily="/Assets/Fonts/HYQiHei 105J.ttf#HYQiHei 105J">
                <Run Text="178"
                     FontSize="15"></Run><Run Text="动漫"
                                              FontSize="12"></Run></TextBlock>-->
        </Viewbox>
        <ListView x:Name="NewsList"
                  Grid.Row="1"
                  ItemsSource="{Binding Feeds}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="NewsList_ItemClick"
                  Loaded="NewsList_Loaded">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem"
                       BasedOn="{StaticResource ItemStyle}">
                    <Setter Property="BorderThickness"
                            Value="0,0,0,4" />
                    <Setter Property="BorderBrush"
                            Value="#80000000" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplateSelector>
                <control:ItemTemplateSelector />
            </ListView.ItemTemplateSelector>
            <ListView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True"
                                             FromHorizontalOffset="0"
                                             FromVerticalOffset="30" />
                </TransitionCollection>
            </ListView.ItemContainerTransitions>
        </ListView>
    </Grid>
</Page>