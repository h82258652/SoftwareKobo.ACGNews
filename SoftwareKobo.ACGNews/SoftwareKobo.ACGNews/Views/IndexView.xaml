<Page x:Class="SoftwareKobo.ACGNews.Views.IndexView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:SoftwareKobo.ACGNews.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:control="using:SoftwareKobo.ACGNews.Controls"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0"
                 x:Name="Header"
                 MinHeight="30"
                 MaxHeight="50"
                 HorizontalAlignment="Left">
            <TextBlock Foreground="#B5B5B5"
                       FontFamily="/Assets/Fonts/HYQiHei 105J.ttf#HYQiHei 105J">
                <Run Text="178"
                     FontSize="15"></Run><Run Text="动漫"
                                              FontSize="12"></Run></TextBlock>
        </Viewbox>
        <ListView x:Name="NewsList"
                  Grid.Row="1"
                  ItemsSource="{Binding}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="NewsList_ItemClick"
                  Loaded="NewsList_Loaded">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Padding"
                            Value="4"></Setter>
                    <Setter Property="BorderThickness"
                            Value="0,0,0,1"></Setter>
                    <Setter Property="BorderBrush"
                            Value="Gray"></Setter>
                    <Setter Property="Background"
                            Value="#80000000"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplateSelector>
                <control:ItemTemplateSelector></control:ItemTemplateSelector>
            </ListView.ItemTemplateSelector>
        </ListView>
    </Grid>
</Page>